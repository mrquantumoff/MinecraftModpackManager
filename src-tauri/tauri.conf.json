{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Minecraft Modpack Manager",
    "version": "1.4.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "scope": ["*"]
      },
      "path": {
        "all": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "2022, Mr. Quantum (Demir Yerli) and contributors with open source libraries",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": ["icons/logo.png", "icons/logo.ico"],
      "identifier": "com.mrquantumoff.mcmodpackmanager",
      "appimage": {
        "bundleMediaFramework": false
      },
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "silent": true,
          "type": "embedBootstrapper"
        },
        "wix": {
          "license": "../LICENSE"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/mrquantumoff/MinecraftModpackManager/raw/master/version.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJDQzU5OUQyQzE5NDFGQkEKUldTNkg1VEIwcG5GTEYrNHBadTMybnhlZ1hLWUNld3kwcVJqVGFQQkt1TFJRdWJIRnNHT3hFYisK"
    },
    "windows": [
      {
        "fullscreen": false,
        "minHeight": 600,
        "resizable": true,
        "title": "Minecraft Modpack Manager",
        "minWidth": 800,
        "maxHeight": 740,
        "maxWidth": 960,
        "center": true,
        "fileDropEnabled": false
      },
      {
        "width": 520,
        "height": 520,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "center": true
      }
    ]
  }
